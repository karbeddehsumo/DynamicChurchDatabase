@model IEnumerable<Domain.picture>

@{
    ViewBag.Title = "Index";
    
}


<div>
<h2 class="center">Picture Center</h2>

    <div class="center">
        @if (@ViewBag.MinistryID > 0)
        {
           @Ajax.ActionLink("Add Picture", "Create", "Picture", new {MinistryID=@ViewBag.MinistryID}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "RightPane" }, new {@id="pageSubTitle"})
        }
        @Ajax.ActionLink("View Pictures", "Details", "Picture", new {ministryID=@ViewBag.MinistryID,CallerType=@ViewBag.CallerType}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "RightPane" }, new {@id="pageSubTitle"})

    </div>

    <div id="RightPane" class="panel">
        @if (@ViewBag.CallerType == "Ministry")
        {
            @Html.Action("List", "Picture", new { bDate = @ViewBag.BeginDate, eDate = @ViewBag.EndDate,SearchType = "MinistrySearch",codeID=@ViewBag.MinistryID })
        }
        else
        {
            @Html.Action("Details", "Picture", new {ministryID=@ViewBag.MinistryID,CallerType=@ViewBag.CallerType})
        }
    </div>
    </div>

<script type="text/javascript">

    $(document).ready(function () {
        $('.datepicker').not('.hasDatePicker').datepicker();

    });

 </script>
