@model Domain.document

@{
    ViewBag.Title = "Delete";
    
}



<div id="AjaxFormPane">
<h2>Delete Calendar</h2>

<h3>Are you sure you want to delete this record?</h3>

<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Type
        </th>
        <th>
            SortOrder
        </th>
        <th>
            DateCreated
        </th>
        <th>
            Author
        </th>
        <th>
            Version
        </th>
        <th>
            FileName
        </th>
        <th>
            Status
        </th>
        <th>
            EnteredBy
        </th>
        <th>
            DateEntered
        </th>
        <th></th>
        <th></th>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(model => model.Title)
        </td>
        <td>
            @Html.DisplayFor(model => model.DocumentType)
        </td>
        <td>
            @Html.DisplayFor(model => model.SortOrder)
        </td>
        <td>
            @Html.DisplayFor(model => model.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(model => model.Author)
        </td>
        <td>
            @Html.DisplayFor(model => model.Version)
        </td>
        <td>
            @Html.DisplayFor(model => model.FileName)
        </td>
        <td>
            @Html.DisplayFor(model => model.Status)
        </td>
        <td>
            @Html.DisplayFor(model => model.EnteredBy)
        </td>
        <td>
            @Html.DisplayFor(model => model.DateEntered)
        </td>
    </tr>


</table>

@using (Ajax.BeginForm("Delete", "Document", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }))
{
    <p>
        <input id="DocumentID" name="DocumentID" type="hidden"  value="@ViewBag.DocumentID"/>
     <input type="submit" value="Delete" /> <input id="CancelDeleteBtn" name="CancelDeleteBtn" type="button" value="Cancel Delete"/>
    </p>
}
    </div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#CancelDeleteBtn').click(function (event) {
            $("#AjaxFormPane").hide();
        });
    });
</script>