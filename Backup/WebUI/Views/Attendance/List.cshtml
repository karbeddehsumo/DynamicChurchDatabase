@model IEnumerable<Domain.attendance>

@{
    ViewBag.Title = "List";
}
<div id="TopPane">

</div>
<h2>Category List</h2>

@if (@ViewBag.RecordCount > 0)
{
<table>
    <tr>
        <th>
            memberID
        </th>
        <th>
            RollCall
        </th>
        <th>
            calendarID
        </th>
        <th>
            EnteredBy
        </th>
        <th>
            DateEntered
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.memberID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RollCall)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.calendarID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnteredBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateEntered)
        </td>
              <td>
                     @Ajax.ActionLink("Edit", "Edit", "Attendance", new {AttendanceID=item.attendanceID}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "TopPane" })
                </td>
                <td>
                    @Ajax.ActionLink("Delete", "Delete", "Attendance", new {AttendanceID=item.attendanceID}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "TopPane" })
                </td>
    </tr>
}

</table>
}
else
{
 <p>No attendance added yet!</p>   
}


