}


<div class="jumbotron">
    <h1>Event Calendar</h1>
    <div id="calendar"></div>
</div>

@section scripts{

    <script type="text/javascript">


        $(document).ready(function () {
            $('#calendar').fullCalendar({
                theme: true,

                //defaultView: 'agendaDay',
                editable: false,
                events: "/Calendar/GetEvents/"
            });
        });


</script>
    }

