@model Domain.budget

@{
    ViewBag.Title = "Delete";
}



<div id="AjaxFormPane">

<h3>Are you sure you want to delete this record?</h3>
@string.Format("{0} {1} amount of {2:c} for year:{3}",@Model.subcategory.SubCategoryName,@Model.Type,@Model.Amount,@Model.BudgetYear)
    
@using (Ajax.BeginForm("Delete", "Budget", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }))
{
    <p>
        <input id="BudgetID" name="BudgetID" type="hidden"  value="@ViewBag.BudgetID"/>
     <input type="submit" value="Delete" /> <input id="CancelDeleteBtn" name="CancelDeleteBtn" type="button" value="Cancel Delete"/>
    </p>
}
    </div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#CancelDeleteBtn').click(function (event) {
            $("#AjaxFormPane").hide();
        });
    });
</script>


