@model Domain.listitem

@{
    ViewBag.Title = "Edit";
    
}

<div id="AjaxFormPane">
    <div class="center-text" style="color:red">@TempData["message2"]</div>


@using (Ajax.BeginForm("Edit", "ListItem", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }, new { @class = "center border", @style = "padding-left:60px;width:90%;" }))
{
    @Html.AntiForgeryToken()
            <br />
   <h2 class="center-text">Edit Table Item</h2>
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edit table item here...</legend>

        @Html.HiddenFor(model => model.listItemID)

        <div class="editor-label">
            @Html.HiddenFor(model => model.listTableID)
            @Html.ValidationMessageFor(model => model.listTableID)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Value1)
            @Html.EditorFor(model => model.Value1)
            @Html.ValidationMessageFor(model => model.Value1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Value2)
            @Html.EditorFor(model => model.Value2)
            @Html.ValidationMessageFor(model => model.Value2)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Value3)
            @Html.EditorFor(model => model.Value3)
            @Html.ValidationMessageFor(model => model.Value3)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Value4)
            @Html.EditorFor(model => model.Value4)
            @Html.ValidationMessageFor(model => model.Value4)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.Value5)
            @Html.EditorFor(model => model.Value5)
            @Html.ValidationMessageFor(model => model.Value5)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.Value6)
            @Html.EditorFor(model => model.Value6)
            @Html.ValidationMessageFor(model => model.Value6)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.Value7)
            @Html.EditorFor(model => model.Value7)
            @Html.ValidationMessageFor(model => model.Value7)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.Value8)
            @Html.EditorFor(model => model.Value8)
            @Html.ValidationMessageFor(model => model.Value8)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.Value9)
            @Html.TextBoxFor(model => model.Value9, new { @Value = DateTime.Now.ToShortDateString(), id = "datepicker" })
            @Html.ValidationMessageFor(model => model.Value9)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.Value10)
            @Html.TextBoxFor(model => model.Value10, new { @Value = DateTime.Now.ToShortDateString(), id = "datepicker2" })
            @Html.ValidationMessageFor(model => model.Value10)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
            @Html.EditorFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EnteredBy,"Entered By")
            @Html.TextBoxFor(model => model.EnteredBy, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.EnteredBy)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateEntered,"Date Entered")
            @Html.TextBoxFor(model => model.DateEntered, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.DateEntered)
        </div>

        <div id="formSubmitButton">
            <button id="ButtonClick" type="submit" class="btn btn-default">Edit</button>
            <button id="CloseBotton" class="btn btn-default">Close</button>
        </div>
    </fieldset>
}

</div>


<script type="text/javascript">

    $(document).ready(function () {

        $(".datefield").datepicker();
        $('#datepicker').not('.hasDatePicker').datepicker();
        $('#datepicker2').not('.hasDatePicker').datepicker();

        $("#CloseBotton").click(function (event) {
            $("#AjaxFormPane").hide();
        });

        $("#familyID").change(function (event) {
            var i = $("#familyID option:selected").text().indexOf('-');
            $("#LastName").val($("#familyID option:selected").text().substring(0, i - 1));
            $("#InterestAmount").val(parseFloat(($("#InterestRate").val() / 100) * $("#Amount").val()));
        });

        $('#ButtonClick').click(function (event) {
           
        });
    });
</script>
