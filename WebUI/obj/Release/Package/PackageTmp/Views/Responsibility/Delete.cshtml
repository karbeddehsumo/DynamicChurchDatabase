    ViewBag.Title = "Delete";
 
}


<div id="AjaxFormPane">
<h2>Delete staff responsibility Record</h2>

<h3>Are you sure you want to delete this record?</h3>
<table>
    <tr>
        <th>
            staff
        </th>
        <th>
            Date Created
        </th>
        <th>
            Status
        </th>
        <th>
            Description
        </th>
        <th>
            Title
        </th>
        <th>
            Entered By
        </th>
        <th>
