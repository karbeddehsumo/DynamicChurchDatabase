@model Domain.sale

@{
    ViewBag.Title = "Delete";
 
}


<div id="AjaxFormPane">
<h2>Delete Sale Record</h2>

<h3>Are you sure you want to delete this record?</h3>
<table>
    <tr>
        <th>
            Date
        </th>
        <th>
            Amount
        </th>
        <th>
            Product Count
        </th>
        <th>
            Cashier
        </th>
        <th>
            SubTotal
        </th>
        <th>
            Tax
        </th>
        <th>
            Total
        </th>
        <th>
            Check #
        </th>
        <th>
            Entered By
        </th>
        <th>
            Date Entered
        </th>
        <th></th>
         <th></th>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(model => model.saleDate)
        </td>
        <td>
            @Html.DisplayFor(model => model.saleAmount)
        </td>
        <td>
            @Html.DisplayFor(model => model.NumberProduct)
        </td>
        <td>
            @Html.DisplayFor(model => model.Cashier)
        </td>
        <td>
            @Html.DisplayFor(model => model.SubTotal)
        </td>
        <td>
            @Html.DisplayFor(model => model.Tax)
        </td>
        <td>
            @Html.DisplayFor(model => model.Total)
        </td>
        <td>
            @Html.DisplayFor(model => model.CheckNumber)
        </td>
        <td>
            @Html.DisplayFor(model => model.EnteredBy)
        </td>
        <td>
            @Html.DisplayFor(model => model.DateEntered)
        </td>
    </tr>


</table>
@using (Ajax.BeginForm("Delete", "Sale", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }))
{
    <p>
        <input id="SaleID" name="SaleID" type="hidden"  value="@ViewBag.SaleID"/>
     <input type="submit" value="Delete" /> <input id="CancelDeleteBtn" name="CancelDeleteBtn" type="button" value="Cancel Delete"/>
    </p>
}
    </div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#CancelDeleteBtn').click(function (event) {
            $("#AjaxFormPane").hide();
        });
    });
</script>