@model IEnumerable<Domain.sale>

@{
    ViewBag.Title = "List";
    
}

<div>
<div id="TopPane">

</div>

@if (@ViewBag.RecordCount > 0)
{
<table>
    <tr>
        <th>
            Date
        </th>
        <th>
            Amount
        </th>
        <th>
            Product Count
        </th>
        <th>
            Cashier
        </th>
        <th>
            SubTotal
        </th>
        <th>
            Tax
        </th>
        <th>
            Total
        </th>
        <th>
            CheckNumber
        </th>
        <th>
            Entered By
        </th>
        <th>
            Date Entered
        </th>
        <th></th>
         <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.saleDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.saleAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cashier)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnteredBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateEntered)
        </td>
                  <td>
                    @Ajax.ActionLink("Edit", "Edit", "Sale", new {SaleID=item.saleID}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "TopPane" })
            </td>
            <td>
                @Ajax.ActionLink("Delete", "Delete", "Sale", new {SaleID=item.saleID}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "TopPane" })
            </td>
    </tr>
}

</table>
}
else
{
 <p>No sale added yet!</p>   
}
</div>