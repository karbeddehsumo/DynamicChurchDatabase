@model Domain.sale

@{
    ViewBag.Title = "Details";
  
}



<h2 class="center-text">View Event Budget Report</h2>
<br />

<div>

   <div class="float-left">
        <p class="float-left">Begin Date </p>
    <input id="bDate" type="text"  class="datepicker" value="@ViewBag.BeginDate" style="width:100px;" />
        </div>
    
    <div class="float-left" style="padding-left:5px;">
         <p class="float-left">End Date </p>
     <input id="eDate" type="text"  class="datepicker" value="@ViewBag.EndDate" style="width:100px;" />
        </div>

    <input id="DateSearch" name="DateSearch" type="button" value="Search"/>

    </div>

<br />
<br />

<div class="CalendarData">
@Html.Action("List", "Sale", new {bDate=@ViewBag.BeginDate,eDate=@ViewBag.EndDate })
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#DateSearch').not('.hasDatePicker').datepicker();

        $("#DateSearch").click(function (event) {
            var bdate = $("#bDate").val();
            var edate = $("#eDate").val();
            var url = "/Sale/List";
            $.get(url, { bDate: bdate.toString(), eDate: edate.toString()}, function (data) { $(".CalendarData").html(data) });

        });

    });

 </script>