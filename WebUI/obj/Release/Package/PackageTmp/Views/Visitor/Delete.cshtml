@model Domain.visitor

@{
    ViewBag.Title = "Delete";
 
}


<div id="AjaxFormPane">
<h3>Delete Visitor Record</h3>

<p>Are you sure you want to delete this record from the visitors list?</p>
    @string.Format("{0} {1} {2}",@Model.Title,@Model.FirstName,@Model.LastName)
@using (Ajax.BeginForm("Delete", "Visitor", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }))
{
    <p>
        <input id="VisitorID" name="VisitorID" type="hidden"  value="@ViewBag.VisitorID"/>
         <input type="submit" value="Delete" /> <input id="CancelDeleteBtn" name="CancelDeleteBtn" type="button" value="Cancel Delete"/>
    </p>
}
    </div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#CancelDeleteBtn').click(function (event) {
            $("#AjaxFormPane").hide();
        });
    });
</script>