@model IEnumerable<Domain.constant>

@{
    ViewBag.Title = "List";
    
}

<div id="TopPane"></div>

<div id="AjaxFormPane" class="slider">



@if (ViewBag.RecordCount > 0)
{
<table>
    <thead>
        <tr>
            <th>Category</th>
            <th>Name</th>
            <th>Value1</th>
            <!--
            <th>Value2</th>
            <th>Value3</th>
            <th>Status</th>
                -->
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Category</td>
                <td>@item.ConstantName</td>
                <td>@item.Value1</td>
                <!--
                <td>@item.Value2</td>
                <td>@item.Value3</td>
                <td>@item.Status</td>
                    -->
                <td>
                     @Ajax.ActionLink("Edit", "Edit", "Constant", new {ConstantID=item.constantID}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "TopPane" })
                </td>
                <td>
                    @Ajax.ActionLink("Delete", "Delete", "Constant", new {ConstantID=item.constantID}, new AjaxOptions {Confirm="Do you want to delete this record?",HttpMethod="Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "TopPane" })
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p>No constant record found.</p>
}
    </div>