@model Domain.listtable

@{
    ViewBag.Title = "Delete";
  
}


<div id="AjaxFormPane">
<h2>Delete table</h2>

<h3>Are you sure you want to delete this table?</h3>

<table>
    <tr>
        <th>
            ministry
        </th>
        <th>
            Title
        </th>
        <th>
            Date Created
        </th>
        <th>
            Status
        </th>
        <th>
            Entered By
        </th>
        <th>
            Date Entered
        </th>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(model => model.ministryID)
        </td>
        <td>
            @Html.DisplayFor(model => model.Title)
        </td>
        <td>
            @Html.DisplayFor(model => model.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(model => model.Status)
        </td>
        <td>
            @Html.DisplayFor(model => model.EnteredBy)
        </td>
        <td>
            @Html.DisplayFor(model => model.DateEntered)
        </td>
     </tr>


</table>

@using (Ajax.BeginForm("Delete", "ListITable", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }))
{
    <p>
        <input id="ListTableID" name="ListTableID" type="hidden"  value="@ViewBag.ListTableID"/>
     <input type="submit" value="Delete" /> <input id="CancelDeleteBtn" name="CancelDeleteBtn" type="button" value="Cancel Delete"/>
    </p>
}
    </div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#CancelDeleteBtn').click(function (event) {
            $("#AjaxFormPane").hide();
        });
    });
</script>