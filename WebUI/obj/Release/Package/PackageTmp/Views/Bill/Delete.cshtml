@model Domain.bill

@{
    ViewBag.Title = "Delete";
}


<div id="AjaxFormPane">
<h2>Delete Member</h2>

<h3>Are you sure you want to delete this record?</h3>
<p>@string.Format("{0} (Account#-{1}) amount of {2:c}",@Model.payee.PayeeName,@Model.AccountNumber,@Model.TotalAmount)</p>

@using (Ajax.BeginForm("Delete", "Bill", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }))
{
    <p>
        <input id="BillID" name="BillID" type="hidden"  value="@ViewBag.BillID"/>
     <input type="submit" value="Delete" /> <input id="CancelDeleteBtn" name="CancelDeleteBtn" type="button" value="Cancel Delete"/>
    </p>
}
    </div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#CancelDeleteBtn').click(function (event) {
            $("#AjaxFormPane").hide();
        });
    });
</script>