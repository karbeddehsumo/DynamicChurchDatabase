@model Domain.income

@{
    ViewBag.Title = "Delete";
}


<div id="SubtitleInline"></div>
<div id="AjaxFormPane">
<p>Are you sure you want to delete this record?</p>
<p>@string.Format("{0} record of {1:c}",@Model.Title, Convert.ToDecimal(@ViewBag.TotalAmount))</p>

@using (Ajax.BeginForm("Delete", "Income", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }))
{
    <p>
        <input id="IncomeID" name="IncomeID" type="hidden"  value="@ViewBag.IncomeID"/>
     <input type="submit" value="Delete" /> <input id="CancelDeleteBtn" name="CancelDeleteBtn" type="button" value="Cancel Delete"/>
    </p>
}
    </div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#CancelDeleteBtn').click(function (event) {
            $("#AjaxFormPane").hide();
        });
    });
</script>