            @Html.DisplayFor(model => model.AssignDate)
        </td>
        <td>
            @Html.DisplayFor(model => model.DueDate)
        </td>
        <td>
            @Html.DisplayFor(model => model.CompletionRatio)
        </td>
        <td>
            @Html.DisplayFor(model => model.Status)
        </td>
