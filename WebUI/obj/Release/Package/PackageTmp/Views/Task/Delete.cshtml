    ViewBag.Title = "Delete";
 
}


<div id="AjaxFormPane">
<h2>Delete Task Record</h2>

<h3>Are you sure you want to delete this record?</h3>
<table>
    <tr>
        <th>
            goalID
        </th>
        <th>
            Title
        </th>
        <th>
            AssignTo
        </th>
        <th>
            AssignDate
        </th>
        <th>
            DueDate
        </th>
        <th>
            CompletionRatio
        </th>
        <th>
            Status
        </th>
        <th>
            EnteredBy
        </th>
        <th>
            DateEntered
        </th>
        <th></th>
        <th></th>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(model => model.goalID)
        </td>
        <td>
            @Html.DisplayFor(model => model.Title)
        </td>
        <td>
            @Html.DisplayFor(model => model.AssignTo)
