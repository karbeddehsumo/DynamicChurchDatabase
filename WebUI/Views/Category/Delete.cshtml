@model Domain.category

@{
    ViewBag.Title = "Delete";
    
}



<div id="AjaxFormPane">
<h2>Delete Category</h2>

<h3>Are you sure you want to delete this record?</h3>

<table>
    <thead>
    <tr>
        <th>
            CategoryName
        </th>
        <th>
            Status
        </th>
    </tr>
</thead>
    <tbody>
    <tr>
        <td>
            @Html.DisplayFor(model => model.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(model => model.Status)
        </td>

    </tr>
        </tbody>

</table>

@using (Ajax.BeginForm("Delete", "Category", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }))
{
    <p>
        <input id="CategoryID" name="CategoryID" type="hidden"  value="@ViewBag.CategoryID"/>
     <input type="submit" value="Delete" /> <input id="CancelDeleteBtn" name="CancelDeleteBtn" type="button" value="Cancel Delete"/>
    </p>
}
    </div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#CancelDeleteBtn').click(function (event) {
            $("#AjaxFormPane").hide();
        });
    });
</script>


