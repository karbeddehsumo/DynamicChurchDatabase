@model IEnumerable<Domain.category>

@{
    ViewBag.Title = "List";
    
}
<div id="TopPane">

</div>
<h2>Category List</h2>

@if (@ViewBag.RecordCount > 0)
{
<table>
    <tr>
        <th>
            CategoryName
        </th>
        <th>
            Status
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>

            @Ajax.ActionLink("Edit", "Edit", "Category", new {CategoryID=item.categoryID}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "TopPane" }) |
            </td>
        <td>
            @Ajax.ActionLink("Delete", "Delete", "Category", new {id=item.categoryID}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "TopPane" })

        </td>
    </tr>
}

</table>
}
else
{
 <p>No category added yet!</p>   
}
