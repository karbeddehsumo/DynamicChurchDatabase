@model Domain.meetingagenda

@{
    ViewBag.Title = "Delete";
    
}



<div id="AjaxFormPane">
<h2>Delete Meeting</h2>

<h3>Are you sure you want to delete this record?</h3>

<table>
    <tr>
        <th>
            meeting
        </th>
        <th>
            Description
        </th>
        <th>
            Status
        </th>
        <th>
            Entered By
        </th>
        <th>
            Date Entered
        </th>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(model => model.meetingID)
        </td>
        <td>
            @Html.DisplayFor(model => model.Description)
        </td>
        <td>
            @Html.DisplayFor(model => model.Status)
        </td>
        <td>
            @Html.DisplayFor(model => model.EnteredBy)
        </td>
        <td>
            @Html.DisplayFor(model => model.DateEntered)
        </td>
    </tr>

</table>

@using (Ajax.BeginForm("Delete", "MeetingAgenda", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }))
{
    <p>
        <input id="MeetingAgendaID" name="MeetingAgendaID" type="hidden"  value="@ViewBag.MeetingAgendaID"/>
     <input type="submit" value="Delete" /> <input id="CancelDeleteBtn" name="CancelDeleteBtn" type="button" value="Cancel Delete"/>
    </p>
}
    </div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#CancelDeleteBtn').click(function (event) {
            $("#AjaxFormPane").hide();
        });
    });
</script>