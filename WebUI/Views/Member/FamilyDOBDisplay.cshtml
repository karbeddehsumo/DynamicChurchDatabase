@model IEnumerable<Domain.member>

<div id="updateReturnMsg"></div>
<div class="row">
@foreach (var item in Model)
{
    if(@item.memberID != @ViewBag.MemberID)
    {
                using (Ajax.BeginForm("UpdateFamilyDOB", "Member", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "updateReturnMsg" }))
                { 
                    
                    <div class="col-xs-12 col-sm-4 col-md-4">
                        <label  for="DOB">@string.Format("{0} Birthdate",@item.FirstName)</label>
                        <input  name="DOB" type="text" class="datefield" style="width:100%" value="@item.DOB.Date">
                        <button id="SubmitBtn" type="submit" class="btn btn-success btn-sm">Update</button>
                        <input id="memberID" name="memberID" type="hidden" value="@item.memberID" />
                    </div>

          
                }
    }
}
          </div>


<script type="text/javascript">
  $(document).ready(function () {

        $(".datefield").datepicker();
        $('#datepicker').not('.hasDatePicker').datepicker();

    

      });
</script>
