@model Domain.listitem

@{
    ViewBag.Title = "Create";
    
}
<script src="../../Scripts/jquery-1.7.1.min.js"></script>
<div id="AjaxFormPane">
    <div class="center-text" style="color:red">@TempData["message2"]</div>


@using (Ajax.BeginForm("Create", "ListItem", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "AjaxFormPane" }, new { @class = "center border", @style = "padding-left:60px;width:90%;" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@ViewBag.TableName</legend>

        <div class="editor">
            @Html.HiddenFor(model => model.listTableID)
            @Html.ValidationMessageFor(model => model.listTableID)
        </div>

        @if (@ViewBag.FieldName1 != "")
        {
        <div class="editor">
            @Html.LabelFor(model => model.Value1,(string)@ViewBag.FieldName1)
