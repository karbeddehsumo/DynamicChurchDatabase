            @Html.ValidationMessageFor(model => model.Value9)
        </div>
        }
        @if (@ViewBag.FieldName10 != "")
        {
        <div class="editor">
            @Html.LabelFor(model => model.Value10,(string)@ViewBag.FieldName10)
