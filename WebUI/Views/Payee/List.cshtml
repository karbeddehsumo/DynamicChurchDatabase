@model IEnumerable<Domain.payee>

@{
    
}

<div id="TopPane">
<div  class="slider">

@if (ViewBag.RecordCount > 0)
{
<table>
    <tr>
        <th>
            Payee
        </th>
        <th>
            Account #
        </th>
        <th>
            Phone #
        </th>
        <th>
            Email
        </th>
        <th>
            Category
        </th>
        <th>
            Frequency
        </th>
        <th>
            Description
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
         <td>
            @Html.DisplayFor(modelItem => item.PayeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.subcategory.SubCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Frequency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>    
            @Ajax.ActionLink("Edit", "Edit", "Payee", new {PayeeID=item.payeeID}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "TopPane" })
            </td>
        <td>
            @Ajax.ActionLink("Delete", "Delete", "Payee", new {PayeeID=item.payeeID}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "TopPane" })
        </td>
    </tr>
}

</table>
}
else
{
  <p>No payee entered yet.</p>
}

</div>
    </div>