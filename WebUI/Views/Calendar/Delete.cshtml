@model Domain.calendar

@{
    ViewBag.Title = "Delete";
}



<div id="AjaxFormPane">
<h2>Delete Calendar</h2>

<h3>Are you sure you want to delete this record?</h3>

<table>
    <tr>
        <th>
            ministryID
        </th>
        <th>
            CalendarDate
        </th>
        <th>
            Event Type
        </th>
        <th>
            StartTime
        </th>
        <th>
            EndTime
        </th>
        <th>
            Loacation
        </th>
        <th>
            Description
        </th>
        <th>
            Status
        </th>
        <th>
            Title
        </th>
        <th>
            EnteredBy
        </th>
        <th>
            DateEntered
        </th>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(model => model.ministryID)
        </td>
        <td>
            @Html.DisplayFor(model => model.CalendarDate)
        </td>
        <td>
            @Html.DisplayFor(model => model.EventType)
        </td>
        <td>
            @Html.DisplayFor(model => model.StartTime)
        </td>
        <td>
            @Html.DisplayFor(model => model.EndTime)
        </td>
        <td>
            @Html.DisplayFor(model => model.Location)
        </td>
